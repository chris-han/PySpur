// filepath: .vscode/tasks.json
{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "yarn: dev",
      "type": "shell",
      "command": "node loadEnv.js && yarn dev",
      "isBackground": true,
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": {
        "owner": "custom",
        "pattern": {
          "regexp": "^$"
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": "ready - started server on",
          "endsPattern": "event - compiled successfully"
        }
      }
    }
  ]
}